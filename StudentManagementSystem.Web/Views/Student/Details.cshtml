@model StudentManagementSystem.Web.Models.Entities.Student

@{
    ViewData["Title"] = "Student Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">First Name:</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Surname:</dt>
        <dd class="col-sm-10">@Model.Surname</dd>

        <dt class="col-sm-2">Gender:</dt>
        <dd class="col-sm-10">@Model.Gender</dd>

        <dt class="col-sm-2">Date of Birth:</dt>
        <dd class="col-sm-10">@Model.DOB.ToShortDateString()</dd>

        <dt class="col-sm-2">Address 1:</dt>
        <dd class="col-sm-10">@Model.Address1</dd>

        <dt class="col-sm-2">Address 2:</dt>
        <dd class="col-sm-10">@Model.Address2</dd>

        <dt class="col-sm-2">Address 3:</dt>
        <dd class="col-sm-10">@Model.Address3</dd>
    </dl>
</div>

<a asp-action="Index">Back to List</a>
